<div class="span2">
	<div class="section">
		<h3>Tapah&shy;tumia</h3>	
		
		<br />
		
		<% @semi_latest.each do |news| %>
			<div>
				<span class="news-date"><%= news.published_at.strftime("%d.%m.%Y") %></span>
				<h4><%= news.title %></h4>
				<p><%= truncate(news.body, :length => 80)%> <br /> <a href="/uutinen/<%= news.id %>">Lue lisää</a></p>
			</div>
		<% end %>
		
		<br />
		
		<a class="btn btn-medium"  href="/uutisarkisto"><i class="icon-folder-open"></i> Lisää tapahtumia</a>
	</div>
</div>

<div class="span8">	
	<div class="section">
		<div class="well" id="news_wrapper">
			<h3>Uusimmat tapahtumat</h3>
			
			<br />
			
			<% @latest_news.each do |news| %>
				<div>
					<span class="news-date"><%= news.published_at.strftime("%d.%m.%Y") %></span>
					<h4><%= news.title %></h4>
					<p><%= truncate(news.body, :length => 80)%> <br /> <a href="/uutinen/<%= news.id %>">Lue lisää</a></p>
				</div>
			<% end %>
		</div>
	</div>
</div>

