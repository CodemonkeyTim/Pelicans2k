<div class="span12">
	<div class="section">
		<a class="btn-large btn" onclick="window.location='/uutisarkisto'">Takaisin</a>
		<h2><%= @news.title %></h2>
		
		<p>
			Julkaistu: <span class="news-date"><%= @news.published_at.strftime("%d.%m.%Y %H:%M") %></span><br />
			Muokattu viimeksi: 
			<% if @news.edited_at %>
				<span class="news-date"><%= @news.edited_at.strftime("%d.%m.%Y %H:%M") %></span>
			<% else %>
				-
			<% end %>
		</p>
		
		<p>
			<%= @news.body %>
		</p>
		
		<% unless @news.attachments.length == 0 %>
			<h3>Liitteet</h3>
			<p>
				<% @news.attachments.each do |att| %>
					<a href="<%= att.path %>"><%= att.filename %></a><br />
				<% end %>
			</p>
		<% end %>
	</div>
</div>
