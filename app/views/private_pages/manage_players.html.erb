					<table class="table" >
					
					<tr>
					<th>Valitse joukkue jolle valitut tunnit varataan</th>
					<td>
						<select id="save-to-team-select">
							<option value="0"></option>
							<% Team.all.each do |team| %>
								<option value="<%= team.id %>"><%= team.name %></option>
							<% end %>
						</select>
					</td>
					</tr>
					</table>
				
<table class="table">
	<tr>
		<th>Nro.</th>
		<th>Etunimi</th>
		<th>Sukunimi</th>
		<th>Position</th>
		<td></td>
	</tr>
	<% Player.all.each do |player| %>
	  	<tr id="player_<%= player.id %>" class="player-row">
	  	<td><%= player.number %></td>
		<td><%= player.f_name %></td>
		<td><%= player.l_name %></td>
		<td><%= player.position %></td>
		<td>
  			<a class="btn btn-medium edit-players-btn">Muokkaa</a>
  			<a class="btn btn-medium delete-players-btn" onclick="delete_players('')">Poista</a>
  			
  		</td>
  	
	</tr>
	<% end %>
</table>

