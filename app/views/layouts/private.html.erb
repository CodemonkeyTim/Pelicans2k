<!DOCTYPE html>
<html>
<head>
  <title>Pelicans2k</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
	<% unless flash[:notice].nil? %>
		<div class="row">
			<div class="alert alert-success">
				<h3><%= flash[:notice] %></h3>
			</div>
		</div>
	<% end %> 
	
	<div class="row">
		<div class="span12">
			<img alt="Banner" />
		</div>
	</div>
	
	<div class="row">
		<div class="span12">
			<p class="centered-text">Logged in as <%= current_user.name %>. <a href="<%= destroy_user_session_path %>">Kirjaudu ulos.</a></p>
		</div>
	</div>
	
	<div class="row">
		<div class="span3">
			<ul class="nav nav-stacked nav-pills">
				<li><a href="#">Som stoof</a></li>
			</ul>
		</div>
		
		<div class="span9">
			<%= yield %>	
		</div>
		
	</div>
	
	<div class="row">
		<div class="span12">
			<h5 class="centered">&copy; HMS Vuoto</h5> 
		</div>
	</div>
</div>
</body>
</html>
