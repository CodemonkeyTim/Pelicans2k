					<li id="links"><a href="/linkkeja">Linkkejä</a></li>
				</ul>
			</div>
		</div>
	</div>
	
</div>
</div>

<div class="container">
	<div class="row">
		<%= yield %>
	</div>
	
	<div class="row">
		<div class="span12">
			<h5 class="centered">&copy; HMS Vuoto <a href="#">KS</a></h5> 
		</div>
	</div>
</div>


<script>
	$("#teams").mouseover(function () {
		//$(this).addClass("open");
		link_out = false;
		$(this).find(".dropdown-menu").slideToggle();
	});
	
	var link_out = false;
	var teams_out = false;
	
	$("#teams").mouseout(function () {
		//$(this).removeClass("open");
		link_out = true;
		
		if (link_out && teams_out) {
			$(this).find(".dropdown-menu").slideToggle();
		}
		
	});
	
	$("#teams-dropdown-menu").mouseout(function () {
		teams_out = true;
	});
	
	$("#teams-dropdown-menu").mouseover(function () {
		teams_out = false;
	});
</script>

</body>
</html>
